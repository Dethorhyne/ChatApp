@model SurveyQuestion
@{
    ViewData["Title"] = "Edit Survey Question";
}

<div class="Form-Page">
    <div class="Form-Container">
        <h4>Edit Question</h4>
        <div>
            <form asp-controller="Admin" asp-action="EditSurveyQuestion" class="form" role="form" method="post" accept-charset="UTF-8">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="SurveyId" type="hidden" value="@Model.SurveyId"/>
                </div>
                <div class="form-group">
                    <input asp-for="SurveyQuestionId" type="hidden" value="@Model.SurveyQuestionId" />
                </div>
                <div class="form-group">
                    <span>Question Title</span>
                    <input asp-for="Title" class="form-control" placeholder="Question Title" value="@Model.Title" type="text" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span>Question Description</span>
                    <input asp-for="Description" class="form-control" placeholder="Question Description" value="@Model.Description" type="text" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span>Question type</span>
                    <select asp-for="Type" class="form-control">
                        <option value="Text">Text</option>
                        <option value="Radio">Radio</option>
                        <option value="Checkbox">Checkbox</option>
                        <option value="Select">Drop down menu</option>
                    </select>
                </div>
                <div class="form-group">
                    <div class="col-md-4 right">
                        <a href="/Admin/SurveyInformation/@Model.SurveyId" class="btn btn-danger btn-block">Cancel</a>
                    </div>
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary btn-block">Save question</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
