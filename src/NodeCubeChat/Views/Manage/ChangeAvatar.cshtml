@model ChangeAvatarViewModel
@{
    ViewData["Title"] = "Change E-mail";
}
<div class="Form-Page">
    <form asp-controller="Manage" asp-action="ChangeAvatar" method="post" class="form-horizontal" enctype="multipart/form-data">
        <div class="Form-Container">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div id="formGroupusername" class="form-group">
                <label class="col-md-4 control-label">Current Avatar</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <img src="@Model.CurrentAvatar" />
                    </div>
                </div>
            </div>

            <div id="formGroupusername" class="form-group">
                <label class="col-md-4 control-label">New Avatar</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input type="file" name="file" class="form-control" placeholder="Upload New Avatar" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 right">
                    <a asp-controller="Manage" asp-action="Index" class="btn btn-danger btn-block">Cancel</a>
                </div>
                <div class="col-md-8">
                    <button type="submit" class="btn btn-default btn-block">Change Avatar</button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
